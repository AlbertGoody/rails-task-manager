<h1> <%= @task.title %> - <%= @task.details %> </h1>

<h5> <%= link_to "Back to List", tasks_path %> </h5>

<h5> <%= link_to "Edit this Task", edit_task_path %> </h5>

<h3>
<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
</h3>
